<div class="book book-<%= book.id %> col-xs-6 col-sm-4 col-md-3">
  <div class="book-description">
    <%= link_to book.img_url, data: {
        lightbox: book.id,
        title: "#{book.title} by #{book.list_authors}"
      } do %>
      <%= image_tag book.small_img_url %>
    <% end %>
    <h1 class="book-title">
      <%= book.title %>
      <%= render 'state_dropdown', book: book %>
    </h1>
    <div class="book-by">by</div>
    <div class="book-authors"><%= book.list_authors %></div>
  </div>
</div>
